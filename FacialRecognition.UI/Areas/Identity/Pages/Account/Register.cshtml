<body>
    <section class="login common-img-bg">
        <!-- Container-fluid starts -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="login-card card-block bg-white">
                        <form enctype="multipart/form-data" class="md-float-material" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <h3 class="text-center txt-primary">Create an account </h3>
                            <div class="avatar-upload">
                                <div class="avatar-edit">
                                    <input type="file" asp-for="Input.Image" id="imageUpload" accept=".png, .jpg, .jpeg" />
                                    <label for="imageUpload"></label>
                                    <span asp-validation-for="Input.Image" class="text-danger"></span>
                                </div>
                                <div class="avatar-preview">
                                    <div id="imagePreview" style="background-image: url(http://i.pravatar.cc/500?img=7);">
                                    </div>
                                </div>
                            </div>
                            <div class="md-input-wrapper">
                                <input asp-for="Input.ID" type="text" class="md-form-control" data-val="true" data-val-required="Please input an ID Number">
                                <label id="userID">ID</label>
                                <span asp-validation-for="Input.ID" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="md-input-wrapper">
                                        <input asp-for="Input.FirstName" type="text" class="md-form-control" data-val="true" data-val-required="This field is required">
                                        <label>First Name</label>
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="md-input-wrapper">
                                        <input asp-for="Input.LastName" type="text" class="md-form-control" data-val="true" data-val-required="This field is required">
                                        <label>Last Name</label>
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div id="department" class="form-group">
                                        <label id="userID">Department</label>
                                        <select asp-for="Input.Department" name="Department" asp-items="Model.Departments" data-val="true" data-val-required="Please select a Department" class="form-control">
                                            <option>---Select a Department---</option>
                                        </select>
                                        <span asp-validation-for="Input.Department" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label>Role</label>
                                        <div class="form-radio">
                                            <div class="form-radio">
                                                <div class="radio radio-inline">
                                                    <label>
                                                        <input asp-for="Input.isLecturer" type="radio" name="Input.isLecturer" class="Input.isLecturer" value="true" id="isLecturer">
                                                        <i class="helper"></i>Lecturer
                                                    </label>

                                                </div>
                                                <div class="radio radio-inline">
                                                    <label>
                                                        <input asp-for="Input.isLecturer" type="radio" name="Input.isLecturer" class="Input.isLecturer" value="false" id="isStudent">
                                                        <i class="helper"></i> Student
                                                    </label>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="md-input-wrapper">
                                <input asp-for="Input.Password" data-toggle="password" type="password" class="md-form-control" data-val="true" data-val-required="Please input a password">
                                <label>Password</label>
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>

                            </div>
                            <div class="col-xs-10 offset-xs-1">
                                <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light m-b-20">
                                    Sign up
                                </button>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 text-center">
                                    <span class="text-muted">Already have an account?</span>
                                    <a asp-area="Identity" asp-page="/Account/Login" class="f-w-600 p-l-5"> Sign In Here</a>

                                </div>
                            </div>
                        </form>
                        <!-- end of form -->
                    </div>
                    <!-- end of login-card -->
                </div>
                <!-- end of col-sm-12 -->
            </div>
            <!-- end of row-->
        </div>
        <!-- end of container-fluid -->
    </section>

